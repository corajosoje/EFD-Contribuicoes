<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="logPath">log</Property>
        <Property name="rollingFileName">EFD-Fiscal</Property>
        <Property name="AppenderPadrao">Console</Property>   
        <Property name="LevelPadrao">ALL</Property>  
        <!--  
        OFF (most specific, no logging)
        FATAL (most specific, little data)
        ERROR.
        WARN.
        INFO.
        DEBUG.
        TRACE (least specific, a lot of data)
        ALL (least specific, all data)
        -->
    </Properties>
  
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        
        <RollingFile name="rollingFile" filePattern="${logPath}/${rollingFileName}_%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
        
    </Appenders>
    
    <Loggers>
       
        <Logger name="LoggerTest" level="ALL" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="WARN" additivity="true">
            <AppenderRef ref="${AppenderPadrao}"/>
        </Root>
        
          
        <Logger name="br.com.jefferson.consultadfe.util.LeitorProperties" level="${LevelPadrao}" additivity="false">
            <AppenderRef ref="${AppenderPadrao}"/>
        </Logger>
       
       
        <Logger name="Main" level="${LevelPadrao}" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
         
      
        
        <!--      JPA        -->
        <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN" additivity="false">
            <AppenderRef ref="Console2"/>
        </Logger>
        <Logger name="org.hibernate.SQL" level="WARN" additivity="false">
            <AppenderRef ref="Console2"/>
        </Logger>
        <Logger name="org.hibernate.jpa.internal.util.LogHelper" level="WARN" additivity="false">
            <AppenderRef ref="Console2"/>
        </Logger>
        <!--
        log.debug("");
        -->
    </Loggers>
</Configuration>